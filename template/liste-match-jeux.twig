<div class="card text-center">
    <div class="card-header ">
          {{ titre }}
    </div>
    <div class="card-body">
        <div id="attente"></div>
            {% for key, value in tab %}
              <div class='row justify-content-md-center'>
                <div class="input-group col-sm-5">
                  <span class="input-group-addon w-75" id="equipe1">({{ value['ID1'] }}) : {{ value['NomEquipe1'] }}</span>
                  <input type="number" class="form-control" id="score-equipe1" aria-describedby="equipe1">
                </div>
                <button type='button' class='btn btn-warning btn-sm col-sm-1' value='{{ value['ID'] }}'>{{ loop.index }}</button>
                <div class="input-group col-sm-5">
                  <input type="number" class="form-control" id="score-equipe2" aria-describedby="equipe2">
                  <span class="input-group-addon w-75 text-right" id="equipe2">{{ value['NomEquipe2'] }} : ({{ value['ID2'] }})</span>
                </div>
              </div>
            {% endfor %}
        </div>
    </div>
</div>
